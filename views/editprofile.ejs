      --bg-secondary: #f8f9fa;
      --bg-card: #ffffff;
      --text-primary: #2c3e50;
      --text-secondary: #7f8c8d;
      --border-color: #e9ecef;
      --accent-color: #667eea;
    }
    
    [data-theme="dark"] {
      --bg-primary: #1a1a1a;
      --bg-secondary: #2d2d2d;
      --bg-card: #333333;
      --text-primary: #ffffff;
      --text-secondary: #b0b0b0;
